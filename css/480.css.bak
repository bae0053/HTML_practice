.header{background: #000; overflow :hidden;}
.header .logo h1 img {width: 80px;}
.header .top-btn ul {margin-top: 5px;}

.header .top-btn ul li a { padding: 10px 5px; font-size: 12px;}

.menu > div > ul > li > a {font-size: 14px; padding: 5px 8px;}

.m-menu{position: absolute; right : 10px; top :50px; z-index: 9999;}
.m-menu a{display: block; width: 25px; height: 22px; position: relative; transition:all 0.3s;}
.m-menu a span {width: 100%; height: 2px;background: #000;display: block;position: absolute; transition:all 0.3s;}
.m-menu a span:nth-child(1){top:0;}
.m-menu a span:nth-child(2){top:10px;}
.m-menu a span:nth-child(3){bottom: 0;}


/*중간이 사라지고 상하가 엑스 만들기*/
.m-menu a.active span:nth-child(1){transform : translateY(10px) rotate(-45deg);}
.m-menu a.active span:nth-child(2) {opacity: 0;}
.m-menu a.active span:nth-child(3){transform : translateY(-10px) rotate(45deg);}

.menu {position: fixed;z-index: 9999;left: -100%;width: 100%;max-width: 200px;height: 100%; transition : all 0.3s; background: #fff;}
.menu > div > ul > li {display: block;}
.menu > div > ul > li a{padding: 10px; font-size: 15px;color: #000;border-bottom: 1px solid #e1e1e1;}

.menu > div > ul > li > ul.sub-menu {position: relative;background: #efefef;}
.menu > div > ul > li > ul.sub-menu a{font-size: 12px;}

.banner .swiper-container img {height: auto;}

.bbs-box > div > .board-box {width: 100%; float: none;}
.bbs-box > div > .right-banner {width: 100%; float: none;}

.bbs-box > div > .right-banner .r-slide img {height: 200px;}